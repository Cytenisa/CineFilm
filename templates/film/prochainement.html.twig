{% extends 'base.html.twig' %}

{% block body %}

<div class="wrapper">
    <h2 class="title">
        <strong>Prochainement<span>( {{ nbFilmsProchain }} )</span></strong>
    </h2>
    <div class="news">
    {% for film in filmsProchain %}
        <figure class="article">
            <img src="{{asset('/images/'~ film.image ~'')}}">
            <figcaption>
                <a href="{{ path('film', {'id': film.id}) }}" class="news-card__card-link"></a>
                <h2>{{film.titre}}</h2>
                <h3>Date de sortie : {{film.dateSortie|date("d/m/Y")}}</h3>
                {% if film.duree|date("H\\hi") != "00h00" %}
                    <h3>Durée : {{film.duree|date("H\\hi")}}</h3>
                {% else %}
                    <h3>Durée : Indeterminée </h3>
                {% endif %}
                <p>{{film.resume}}</p>    
            </figcaption>
        </figure> 
    {% endfor %} 
    </div>
</div>


{% endblock %}