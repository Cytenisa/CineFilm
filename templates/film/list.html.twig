{% extends 'base.html.twig' %}

{% block body %}

<div class="wrapper">
    <h2 class="title">
        <strong>Tout les films<span>( {{ nbFilms }} )</span></strong>
    </h2>
    <div class="news">
    {% for film in films %}
        <figure class="article">
            <img src="{{asset('/images/'~ film.image ~'')}}">
            <figcaption>
                <a href="{{ path('film', {'id': film.id}) }}" class="news-card__card-link"></a>
                <h3>{{film.titre}}</h3>
                <h3>Date de sortie : {{film.dateSortie|date("d/m/Y")}}</h3>
                <h3>Dur√©e : {{film.duree|date("H\\hi")}}</h3>
                <p>{{film.resume}}</p>    
            </figcaption>
        </figure> 
    {% endfor %} 
    </div>
</div>

{% endblock %}